{
  "compilerOptions": {
    "outDir": "example/src/dist",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "maroom-ui-kit/core": ["./src/components/"],
      "maroom-ui-kit/core/*": ["./src/components/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "example/src/dist",
    "example"]
}
